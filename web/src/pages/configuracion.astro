            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Endpoint de Recepci贸n
              </label>
              <input type="url" id="sri-endpoint-recepcion" readonly
                     class="block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm">
